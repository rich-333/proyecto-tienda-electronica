@{
    ViewData["Title"] = "Agregar Categoria";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Estilos {
    <link href="~/css/agregarCategoria.css" rel="stylesheet" />
}

<main class="form__categoria">
    <section class="info__categoria">
        <div>
            <h2 class="title">INFORMACION GENERAL DE LA CATEGORIA</h2>
        </div>
        <div class="">
            <label class="lbl" for="nombre_categoria">Nombre de la categoria</label>
            <input class="input__name" id="nombre_categoria" type="text" placeholder="Laptop HP Victus 15" />
        </div>
        <div class="container__description">
            <label class="lbl" for="descripcion_categoria">Descripcion de la categoria</label>
            <textarea 
                class="input__description" 
                id="descripcion_categoria" 
                type="text" placeholder="Escribe una descripción..."
                rows="5"></textarea>
        </div>
    </section>
    <div class="container__actions">
        <button class="btn btn__exit">Salir</button>
        <button class="btn btn__save">Guardar</button>
    </div>
</main>
