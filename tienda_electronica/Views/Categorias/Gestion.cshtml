@{
    ViewData["Title"] = "Gestión de Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Estilos {
    <link href="~/css/gestionCategorias.css" rel="stylesheet" />
}

<main>
    <table>

        <thead class="table__header">
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>Computadoras</td>
                <td>
                    Máquina electrónica capaz de realizar un tratamiento automático de la información y de resolver con gran rapidez problemas 
                    matemáticos y lógicos mediante programas informáticos.
                </td>
                <td>
                    <button class="btn btn__edit">
                        <img class="img__editar" src="~/img/gestion/editar.png" />
                    </button>
                </td>
                <td>
                    <button class="btn btn__delete">
                        <img class="img__eliminar" src="~/img/gestion/elimiinar.png" />
                    </button>
                </td>
            </tr>
        </tbody>

    </table>
</main>
