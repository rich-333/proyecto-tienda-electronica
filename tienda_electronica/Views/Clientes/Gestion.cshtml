@model List<tienda_electronica.Models.Usuarios.Cliente>

@{
    ViewData["Title"] = "Gestion Clientes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Estilos {
<link href="~/css/gestionClientes.css" rel="stylesheet" />
}

<main>
    @if (TempData["Error"] != null)
    {
        <div class="custom-alert show">
            @TempData["Error"]
            <span class="close-btn" onclick="this.parentElement.style.display='none';">&times;</span>
        </div>
    }
    @if (TempData["Mensaje Agregar"] != null)
    {
        <div class="custom-alert show">
            @TempData["Mensaje Agregar"]
            <span class="close-btn" onclick="this.parentElement.style.display='none';">&times;</span>
        </div>
    }
    <table>

        <thead>

            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Contraseña</th>
                <th>Telefono</th>
                <th>Direccion</th>
                <th>Editar</th>
            </tr>

        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.nombre</td>
                    <td>@item.apellido</td>
                    <td>@item.email</td>
                    <td>@item.contrasena</td>
                    <td>@item.telefono</td>
                    <td>@item.direccion</td>
                    <td>
                        <a href="@Url.Action("Editar", "Clientes", new { id = item.idCliente })" class="link__edit btn">
                            <img class="img__editar" src="~/img/gestion/editar.png" />
                        </a>
                    </td>
                </tr>
            }

        </tbody>

    </table>
</main>